	<servlet>
		<servlet-name>EntityCheckLoginServlet</servlet-name>
		<servlet-class>org.abchip.mimo.biz.plugins.context.CheckLoginServlet
		</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>EntityExternalCredentialServlet</servlet-name>
		<servlet-class>org.abchip.mimo.biz.plugins.ExternalCredentialServlet
		</servlet-class>
	</servlet>

	<!-- Mapping -->

	<servlet-mapping>
		<servlet-name>EntityCheckLoginServlet</servlet-name>
		<url-pattern>/biz/service/entityCheckLogin</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>EntityExternalCredentialServlet</servlet-name>
		<url-pattern>/biz/service/entityExternalCredential</url-pattern>
